{
  "name": "@c4coin/crowdsale-contracts",
  "version": "1.0.0",
  "description": "Contracts that implement the C4Coin initial crowdsale",
  "main": "truffle.js",
  "directories": {
    "test": "test",
    "contracts": "contracts"
  },
  "engines": {
    "node": "9.6.1",
    "npm": "5.6.0"
  },
  "devDependencies": {
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.8.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2",
    "solhint": "^1.1.10",
    "solidity-coverage": "^0.4.9"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --no-semi --write '**/*.{js,json}'",
    "eslint-check":
      "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "test": "truffle test",
    "test:cov": "solidity-coverage",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:js": "eslint test/**/*.js"
  },
  "lint-staged": {
    "**/*.{js,json}": ["prettier --singlequote --no-semi --write", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:C4Coin/crowdsale-contracts.git.git"
  },
  "keywords": ["crowdsale"],
  "author": "Dave Sag <davesag@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/C4Coin/crowdsale-contracts/issues"
  },
  "homepage": "https://github.com/C4Coin/crowdsale-contracts#readme",
  "dependencies": {
    "zeppelin-solidity": "^1.7.0"
  }
}
